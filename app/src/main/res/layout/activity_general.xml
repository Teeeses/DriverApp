<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <fragment
        android:id="@+id/leftFragment"
        android:name="com.example.develop.driverapp.ui.fragment.LeftFragment"
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_weight="2" />

    <fragment
        android:id="@+id/centerFragment"
        android:name="com.example.develop.driverapp.ui.fragment.CenterFragment"
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_weight="15" />

    <fragment
        android:id="@+id/rightFragment"
        android:name="com.example.develop.driverapp.ui.fragment.RightFragment"
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_weight="3" />

</LinearLayout>
