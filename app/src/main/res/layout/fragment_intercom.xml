<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/clickedButton">

    <Button
        android:id="@+id/speakButton"
        android:layout_width="210dp"
        android:layout_height="210dp"
        android:textColor="@color/white"
        android:layout_centerInParent="true"
        android:background="@drawable/button_intercom_fragment_shape"
        android:text="@string/speak"
        android:textSize="25sp"/>


    <LinearLayout
        android:id="@+id/playStop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:visibility="invisible">

        <Button
            android:id="@+id/redRingStop"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/red_ring_stop_intercom_fragment_shape"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:text="@string/beingRecorded"/>

    </LinearLayout>


</RelativeLayout>
